theme = 360 / 5 * 2
saturation = 10%
darkest = hsl(theme, saturation, 15%)
dark = hsl(theme, saturation, 20%)
light = hsl(theme, 50%, 90%)
lightest = hsl(theme, 50%, 95%)
paperspace = 16px
space = 4px

html
    background-color darkest
    color light
    text-align center
    font-family sans-serif

html, body, div#app
    height 100%

body
    margin 0px

div#app
    display flex
    flex-direction column

div#paper
    background-color dark
    color lightest
    padding paperspace + 8px paperspace + 8px (((paperspace + 18px)))
    box-shadow 0 24px 38px 3px rgba(0, 0, 0, 0.14), 0 9px 46px 8px rgba(0, 0, 0, 0.12), 0 11px 15px -7px rgba(0, 0, 0, 0.4)
    text-align initial
    max-width 800px
    margin 0 auto

div#error
    color red

.node
    margin-top space + 4px

.point
    display flex

div.bullet.full
    min-width 8px
    height 8px
    background-color light
    border-radius 50%
    border solid gray 8px
    margin 0px space + 4px space 0

.name
    align-self flex-start
    margin 3px 0px 0px
    outline initial

.main.name
    margin 0px

.note
    color gray
    outline initial

div.children
    margin-left space + 8px
    padding-left space + 4px
    border-left solid 1px grey

.main.note
    margin 0px

.heading
    margin-top 8px
    display flex

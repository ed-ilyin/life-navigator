theme = 360 / 5 * 3
saturation = 10%
darkest = hsl(theme, saturation, 15%)
dark = hsl(theme, saturation, 20%)
light = hsl(theme, 100%, 90%)
lightest = hsl(theme, 100%, 95%)
paperspace = 8px
space = 4px

html
    background-color darkest
    color light
    text-align center
    font-family sans-serif

html, body, div#app
    height 100%

body
    margin 0px

div#app
    display flex
    flex-direction column

div#paper
    background-color dark
    color lightest
    padding 0px 8px 18px
    box-shadow 0 24px 38px 3px rgba(0, 0, 0, 0.14), 0 9px 46px 8px rgba(0, 0, 0, 0.12), 0 11px 15px -7px rgba(0, 0, 0, 0.4)
    text-align initial

div#error
    color red

.node
    margin-top space + 4px

.point
    display flex

div.bullet.full
    min-width 8px
    height 8px
    background-color light
    border-radius 50%
    border solid gray 8px
    margin space space + 4px space 0

.heading
    align-self flex-start
    margin space + 4px 0px
    outline initial

.note
    color gray
    margin-left space + 8px
    outline initial

div.content
    margin-left space + 8px
    padding-left space + 4px
    border-left solid 1px grey

.main.note
    margin 0px
